@using BlazingSprites.Models.Character

<img class="spritesheet hair @HairColorCss" src="@HairSource" />

@code {

    [Parameter, EditorRequired] public HairColor Color { get; set; }
    [Parameter, EditorRequired] public HairStyle Style { get; set; }

    private string HairColorCss { get; set; } = "";
    private string HairSource { get; set; } = "";

    protected override void OnParametersSet()
    {
        SetColor();
        SetSource();
    }

    private void SetColor()
    {
        HairColorCss = Color switch
        {
            HairColor.Black => "color-1",
            HairColor.Blonde => "color-2",
            HairColor.Brown => "color-3",
            HairColor.LightBrown => "color-4",
            HairColor.Copper => "color-5",
            HairColor.Emerald => "color-6",
            HairColor.Green => "color-7",
            HairColor.Grey => "color-8",
            HairColor.Lilac => "color-9",
            HairColor.Navy => "color-10",
            HairColor.Pink => "color-11",
            HairColor.Purple => "color-12",
            HairColor.Red => "color-13",
            HairColor.Turquoise => "color-14",
            _ => throw new NotSupportedException()
        };
    }

    private void SetSource()
    {
        if (Style == HairStyle.None)
        {
            HairSource = string.Empty;
            return;
        }

        HairSource = "assets/hair/" + Style switch
        {
            HairStyle.Bob => "bob",
            HairStyle.Braids => "braids",
            HairStyle.Buzzcut => "buzzcut",
            HairStyle.Curly => "curly",
            HairStyle.Emo => "emo",
            HairStyle.ExtraLong => "extra_long",
            HairStyle.ExtraLongSkirt => "extra_long_skirt",
            HairStyle.FrenchCurl => "french_curl",
            HairStyle.Gentleman => "gentleman",
            HairStyle.LongStraight => "long_straight",
            HairStyle.LongStraightSkirt => "long_straight_skirt",
            HairStyle.Midiwave => "midiwave",
            HairStyle.Ponytail => "ponytail",
            HairStyle.Spacebuns => "spacebuns",
            HairStyle.Wavy => "wavy",
            _ => throw new NotSupportedException()
        } + ".png";
    }
}