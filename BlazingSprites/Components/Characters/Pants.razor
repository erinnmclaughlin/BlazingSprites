<img class="spritesheet pants @PantCss" src="@PantSource" />

@code {
    [Parameter, EditorRequired] public PantsModel Model { get; set; } = null!;

    private string PantCss { get; set; } = "";
    private string PantSource { get; set; } = "";

    protected override void OnParametersSet()
    {
        SetPantColor();
        SetPantSource();
    }

    private void SetPantColor()
    {
        PantCss = Model.Color.ToString().Replace("Color", "color-");
    }

    private void SetPantSource()
    {
        PantSource = Model.Style == PantStyle.None? string.Empty : $"assets/clothes/pants/{Model.Style}.png".ToLower();
    }

}