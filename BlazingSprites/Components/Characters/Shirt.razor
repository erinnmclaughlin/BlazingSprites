<img class="spritesheet shirt @ShirtCss" src="@ShirtSource" />

@code {
    [Parameter, EditorRequired] public ShirtModel Model { get; set; } = null!;

    private string ShirtCss { get; set; } = "";
    private string ShirtSource { get; set; } = "";

    protected override void OnParametersSet()
    {
        SetShirtColor();
        SetShirtSource();
    }

    private void SetShirtColor()
    {
        ShirtCss = Model.Color.ToString().Replace("Color", "color-");
    }

    private void SetShirtSource()
    {
        ShirtSource = Model.Style == ShirtStyle.None ? string.Empty : $"assets/clothes/shirts/{Model.Style}.png".ToLower();
    }

}