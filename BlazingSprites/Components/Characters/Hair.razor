<img class="spritesheet hair @HairColorCss" src="@HairSource" />

@code {
    [Parameter, EditorRequired] public HairModel Model { get; set; } = null!;

    private string HairColorCss { get; set; } = "";
    private string HairSource { get; set; } = "";

    protected override void OnParametersSet()
    {
        SetColor();
        SetSource();
    }

    private void SetColor()
    {
        HairColorCss = Model.Color switch
        {
            HairColor.Black => "color-1",
            HairColor.Blonde => "color-2",
            HairColor.Brown => "color-3",
            HairColor.LightBrown => "color-4",
            HairColor.Copper => "color-5",
            HairColor.Emerald => "color-6",
            HairColor.Green => "color-7",
            HairColor.Grey => "color-8",
            HairColor.Lilac => "color-9",
            HairColor.Navy => "color-10",
            HairColor.Pink => "color-11",
            HairColor.Purple => "color-12",
            HairColor.Red => "color-13",
            HairColor.Turquoise => "color-14",
            _ => throw new NotSupportedException()
        };
    }

    private void SetSource()
    {
        if (Model.Style == HairStyle.None)
        {
            HairSource = string.Empty;
            return;
        }

        HairSource = $"assets/hair/{Model.Style}.png".ToLower();
    }
}