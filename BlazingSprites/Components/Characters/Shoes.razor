<img class="spritesheet shoes @ShoeCss" src="@ShoeSource" />

@code {
    [Parameter, EditorRequired] public ShoesModel Model { get; set; } = null!;

    private string ShoeCss { get; set; } = "";
    private string ShoeSource { get; set; } = "";

    protected override void OnParametersSet()
    {
        SetShoeCss();
        SetShoeSource();
    }

    private void SetShoeCss()
    {
        ShoeCss = Model.Color.ToString().Replace("Color", "color-");
    }

    private void SetShoeSource()
    {
        ShoeSource = Model.Style == ShoeStyle.None ? string.Empty : "assets/clothes/shoes.png";
    }
}