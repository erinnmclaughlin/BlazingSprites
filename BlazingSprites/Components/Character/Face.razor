<img class="spritesheet eyes @EyeCss" src="assets/face/eyes.png" />
<img class="spritesheet blush @BlushCss" src="assets/face/blush.png" />    
<img class="spritesheet lips @LipCss" src="assets/face/lips.png" />

@code {

    [Parameter, EditorRequired] public BlushColor BlushColor { get; set; }
    [Parameter, EditorRequired] public EyeColor EyeColor { get; set; }
    [Parameter, EditorRequired] public LipColor LipColor { get; set; }

    private string BlushCss { get; set; } = "color-1";
    private string EyeCss { get; set; } = "color-1";
    private string LipCss { get; set; } = "color-1";

    protected override void OnParametersSet()
    {
        SetBlushCss();
        SetEyeCss();
        SetLipCss();
    }

    private void SetBlushCss()
    {
        if (BlushColor == BlushColor.None)
        {
            BlushCss = "none";
            return;
        }

        BlushCss = BlushColor.ToString().Replace("Color", "color-");
    }

    private void SetEyeCss()
    {
        EyeCss = EyeColor.ToString().Replace("Color", "color-");
    }

    private void SetLipCss()
    {
        LipCss = LipColor.ToString().Replace("Color", "color-");
    }

}
