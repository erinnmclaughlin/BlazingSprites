@using BlazingSprites.Models.Character

<img class="spritesheet pants @PantCss" src="@PantSource" />

@code {

    [Parameter, EditorRequired] public ClothesColor Color { get; set; }
    [Parameter, EditorRequired] public PantStyle Style { get; set; }

    private string PantCss { get; set; } = "";
    private string PantSource { get; set; } = "";

    protected override void OnParametersSet()
    {
        SetPantColor();
        SetPantSource();
    }

    private void SetPantColor()
    {
        PantCss = Color.ToString().Replace("Color", "color-");
    }

    private void SetPantSource()
    {
        PantSource = $"assets/clothes/pants/{Style}.png";
    }

}